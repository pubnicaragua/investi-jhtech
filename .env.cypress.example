# Cypress Testing Environment Variables
# Copiar este archivo a .env.cypress y llenar con valores reales

# ============================================
# CREDENCIALES DE PRUEBA
# ============================================
TEST_EMAIL=test@example.com
TEST_PASSWORD=password123

# ============================================
# URLS
# ============================================
CYPRESS_BASE_URL=http://localhost:8081

# ============================================
# TIMEOUTS (en milisegundos)
# ============================================
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_REQUEST_TIMEOUT=10000
CYPRESS_RESPONSE_TIMEOUT=10000

# ============================================
# CONFIGURACIÓN DE VIDEO
# ============================================
CYPRESS_VIDEO=true
CYPRESS_VIDEO_COMPRESSION=32

# ============================================
# CONFIGURACIÓN DE SCREENSHOTS
# ============================================
CYPRESS_SCREENSHOT_ON_RUN_FAILURE=true

# ============================================
# CONFIGURACIÓN DE REPORTES
# ============================================
CYPRESS_REPORTER=cypress-mochawesome-reporter

# ============================================
# CONFIGURACIÓN DE NAVEGADOR
# ============================================
CYPRESS_BROWSER=chrome

# ============================================
# MODO DEBUG
# ============================================
DEBUG=cypress:*

# ============================================
# CONFIGURACIÓN DE VIEWPORT
# ============================================
CYPRESS_VIEWPORT_WIDTH=375
CYPRESS_VIEWPORT_HEIGHT=812
